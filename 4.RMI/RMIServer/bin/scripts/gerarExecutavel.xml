<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project RMIServer">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/../../.."/>
    <property name="dir.jarfile" value="/home/marlonrcfranco/Desktop"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/ServerRMI.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="gui.apPrincipalServer"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/ClientMQ.jar"/>
            <fileset dir="${dir.workspace}/RMIServer/bin"/>
        </jar>
    </target>
</project>
